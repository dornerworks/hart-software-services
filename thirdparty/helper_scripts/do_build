while [ $# -gt 0 ] ; do
  case $1 in
    -p | --payload) PAYLOAD="$2" ;;
    -o | --out-dir) OUT_DIR="$2" ;;
    -x | --cross-compiler) XCOMPILER="$2" ;;

  esac
  shift
done

# do_configure
## Parsing the Polarfore SoC XML Hardware Configuration file from Libero Design
python3 ${PWD}/tools/mpfs_configuration_generator.py ${PWD}/boards/icicle-kit-es-sd/config/xml/ICICLE_MSS_0.xml

if [ -d ${PWD}/hardware ]; then
    if [ -d ${PWD}/boards/icicle-kit-es-sd/config/hardware ]; then
        # force remove the hardware directory
        rm -rf ${PWD}/boards/icicle-kit-es-sd/config/hardware
    fi
    # Finally move the configuration over to HSS configuration folder
    mv -f ${PWD}/hardware ${PWD}/boards/icicle-kit-es-sd/config
fi ## Finished if hardware folder generated from xml

# Clear the old config file
if [ -f ${PWD}/config.h ]; then
    rm -f ${PWD}/config.h
    fi

cp -f ${PWD}/boards/icicle-kit-es-sd/def_config.sdcard  ${PWD}/.config

# do_compile
## Creating the config for HSS
make O=${OUT_DIR} CROSS_COMPILE=${XCOMPILER} CC=${XCOMPILER}gcc V=1 BOARD=icicle-kit-es genconfig
make O=${OUT_DIR} CROSS_COMPILE=${XCOMPILER} CC=${XCOMPILER}gcc BOARD=icicle-kit-es OPENSBI_LIBS=${OUT_DIR}/lib/libsbi.a

mv -f ${PWD}/boards/icicle-kit-es-sd/config/hardware ${OUT_DIR}
